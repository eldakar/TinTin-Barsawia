#CLASS {zielarstwo} OPEN

#ACTION {^Jestes teraz zajety praca. Musisz wpisac 'przestan' by moc zrobic, to co chcesz.$}
{
	#if {$scinanie == 0}
	{
		#map undo
	}
}
{5}

#ACTION {^Nie znajdujesz zadnych ziol.}
{
	#echo {<fab>%0<099>};
	#variable {aktywne_szukanie} {0};
	#line gag
}
{5}

#ACTION {^Zaczynasz szukac {ziol|macierzanki}.$}
{
	#line gag;
	#echo {<afa>%0<099>};
	#variable aktywne_szukanie 1
}
{5}

#ACTION {^Znajdujesz {?!sie}{.*}{\bkwiat\b|\blisc\b|\bkorzen\b|\blodyge\b|\bowoc\b}{.*}$}
{
	#variable aktywne_szukanie 0;
	otworz sloik;
	wloz ziola do sloika;
	zamknij sloik;
	#math {liczba_zeb_ziol} {${liczba_zeb_ziol}+1};
	#math {dzis_zeb_ziol} {${dzis_zeb_ziol}+1};
	save;
	#line GAG;
	#echo {<afa>%0<099>}
}
{5}

#ACTION {^{Szukasz wszedzie, ale nie znajdujesz zadnych ziol.|Nie znajdujesz zadnych ziol. Moze poszloby ci lepiej, gdybys zaczekal do wiosny.|Nie udalo ci sie znalezc niczego interesujacego.}$}
{
	#echo {<fab>%0<099>};
	#variable {aktywne_szukanie} {0};
	#line gag
}
{5}

#ALIAS {/sellz}
{
	otworz worek;
	wez sloik z worka;
	otworz sloik;
	wez ziola ze sloika;
	zamknij sloik;
	wloz sloik do worka;
	zamknij worek;
	sprzedaj ziola
}
{5}

#ALIAS {/szukaj}
{
	#if {$szukanie_ziol == 0}
	{
		otworz worek;
		wez sloik z worka;
		zamknij worek;
		#variable {szukanie_ziol} {1};
		#regexp {%1} {{[^1]}} {#echo $ziolo;#variable {ziolo}  {%1}};
		#cr
	};
	#elseif {$szukanie_ziol == 1}
	{
		otworz worek;
		wloz sloik do worka;
		zamknij worek;
		#variable {szukanie_ziol} {0};
		#variable {ziolo}  {1};
		#cr
	}
}
{5}

