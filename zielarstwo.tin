#CLASS {zielarstwo} OPEN

#ACTION {^Nie znajdujesz zadnych ziol.}
{
	#line gag;
	#echo {<fab>%0<099>};
	#variable {aktywne_szukanie} {0}
}
{5}

#ACTION {^Zaczynasz szukac {ziol|macierzanki}.$}
{
	#line gag;
	#echo {<afa>%0<099>};
	#variable aktywne_szukanie 1
}
{5}

#ACTION {^Znajdujesz {?!sie}{.*}{\bkwiat\b|\blisc\b|\bkorzen\b|\blodyge\b|\bowoc\b|\bgrzyba\b}{.*}.$}
{
	#line GAG;
	#variable aktywne_szukanie 0;
	#variable znalezione_ziolo 1;
	#regexp {%1%2%3%4} {podluzny cienki lisc} {#var zielarska_komenda {odloz podluzny cienki lisc}};
	#else
	{
		#variable zielarska_komenda /schowajz
	};
	#math {liczba_zeb_ziol} {${liczba_zeb_ziol}+1};
	#math {dzis_zeb_ziol} {${dzis_zeb_ziol}+1};
	#math {ziola[%1%2%3%4][ilosc]} {${ziola[%1%2%3%4][ilosc]}+1};
	save;
	#echo {<afa>%0<faa>[$zielarska_komenda]<099>}
}
{5}

#ACTION {^{Szukasz wszedzie, ale nie znajdujesz zadnych ziol.|Nie znajdujesz zadnych ziol. Moze poszloby ci lepiej, gdybys zaczekal do wiosny.|Nie udalo ci sie znalezc niczego interesujacego.}$}
{
	#line gag;
	#echo {<fab>%0<099>};
	#variable {aktywne_szukanie} {0}
}
{5}

#ALIAS {/schowajz}
{
	otworz woreczek;
	wloz ziola do woreczka;
	zamknij woreczek
}
{5}

#ALIAS {/sellz}
{
	otworz woreczek;
	wez ziola z woreczka;
	zamknij woreczek;
	sprzedaj ziola
}
{5}

#ALIAS {/troff}
{
	otworz woreczek;
	wez trawe z woreczka;
	odloz trawe;
	zamknij woreczek
}
{5}

#ALIAS {/zielarz}
{
	#if {$szukanie_ziol == 0}
	{
		#variable {szukanie_ziol} {1};
		#regexp {%1} {{[^1]}} {#echo $ziolo;#variable {ziolo}  {%1}};
		#cr
	};
	#elseif {$szukanie_ziol == 1}
	{
		#variable {szukanie_ziol} {0};
		#variable {ziolo}  {1};
		#cr
	}
}
{5}

