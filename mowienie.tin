#CLASS {mowienie} OPEN

#ACTION {^%1 przedstawia sie jako:$}
{
	#line gag;
	#echo {<afa>%1 przedstawia sie jako:<099>};
	#variable {opis_postaci} {%1};
	#variable {przedstawianie} {1}
}
{5}

#ALIAS {/showknown}
{
	#foreach {$znane[%*]} {name}
	{
		#showme $name[pokoj]|$name[nazwa]
	};
	#unvariable name
}
{5}

#EVENT {RECEIVED LINE}
{
	#if {$przedstawianie == 1}
	{
		#line gag;
		#echo {<afa>%0<099>};
		#variable {nazwa_postaci} {%0};
		#replace nazwa_postaci {.} {};
		#variable {znane[${opis_postaci}][nazwa]} {$nazwa_postaci};
		#map get roomvnum numer_pokoju;
		#variable {znane[${opis_postaci}][pokoj]} {$numer_pokoju};
		#unvariable numer_pokoju;
		#unvariable nazwa_postaci;
		#unvariable przedstawianie;
		#unvariable opis_postaci
	}
}

#SUBSTITUTE       {^%1 przedstawia sie jako: %2$}           {<afa>%1 przedstawia sie jako:<eca>%2<099>}                  {5}
#SUBSTITUTE       {^%1 {mowi|krzyczy|pyta|nuci|mruczy|odpowiada} do %3:%4$}                                     {<afa>%1 %2 do %3:<eca>%4<099>}      {5}
#SUBSTITUTE       {^%1 {mowi|krzyczy|pyta|nuci|mruczy|odpowiada}{ z oddali| do Ciebie| z calych sil|}:%4$}                                                      {<afa>%1 %2%3:<eca>%4<099>}  {5}

#CLASS {mowienie} CLOSE
