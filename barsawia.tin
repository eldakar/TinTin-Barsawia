#FUNCTION {remove_text}
{
	#IF {"%0" != ""}
	{
	#showme {%0}
	};
	#return |
}

#FUNCTION {siedzenie}
{
	#IF {${sit_state} == 1}
	{
		#return TAK
	};
	#ELSE
	{
		#return NIE
	}
}

#FUNCTION {zielarz}
{
	#IF {${szukanie_ziol} == 1}
	{
		#return TAK
	};
	#ELSE
	{
		#return NIE
	}
}

#EVENT {SESSION DISCONNECTED}
{
	#variable map_state 0;
	#variable szukanie_ziol 0;
	#variable last_room {};
	log off;
	#write main.tin;
	#echo zapisane
}

#EVENT {SESSION CONNECTED}
{
	log on
}

